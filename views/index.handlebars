<div class="row d-flex justify-content-center align-items-center">

    <div class="col text-center" id="party">
        <h1>Party Time!</h1>
    </div>

    <div class="container partyList jumbotron">
        <div class="row d-flex justify-content-center align-items-start ">
            <div class="col-md-6">
                <h4>"Pick Your Party!"</h4>
                <ul>
                    {{#each parties}}
                    {{#unless finalized}}
                    <p>{{name}} <button type="submit" class="select btn btn-primary"
                            data-id="{{id}}">Select</button></p>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h4>"Finalized Parties"</h4>
                <ul>
                    {{#each parties}}
                    {{#if finalized}}
                    <p>{{name}}</p>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>